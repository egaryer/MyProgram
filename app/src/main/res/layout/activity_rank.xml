<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.a001.myprogrem.RankActivity"
    android:background="@drawable/rank_bg">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/rank_golden" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="紀錄重置"
        android:id="@+id/btn_reset"
        android:layout_marginBottom="100dp"
        android:background="@drawable/menu_btn"
        android:textColor="#000000"
        android:onClick="resetPref"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:id="@+id/imageView2"
        android:background="@drawable/rank_ribbon"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv_score"
        android:textColor="#000080"
        android:text="0"
        android:textSize="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="回主選單"
        android:id="@+id/btn_back"
        android:layout_marginBottom="40dp"
        android:background="@drawable/menu_btn"
        android:textColor="#000000"
        android:onClick="goBack"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn_reset"
        android:layout_alignStart="@+id/btn_reset" />

</RelativeLayout>
